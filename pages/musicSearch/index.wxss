.head {
  position: sticky;
  top: 0;
  left: 0;
  background-color: #dc2c1f;
}

.head .search {
  position: absolute;
  display: flex;
}

.head .search .back {
  margin: 0 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.head .search .back:active {
  background-color: rgba(0, 0, 0, 0.3);
}

.head .search .back image {
  width: 40rpx;
  height: 40rpx;
}

.head .search .ipt {
  width: calc(100vw - 112rpx - 100px);
  height: 100%;
  color: #fff;
  border-bottom: 1px solid #ccc;
}

.head .search-suggest {
  z-index: 999;
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translate(-50%, 10rpx);
  width: 90vw;
  background-color: #fff;
  box-shadow: 0 0 12rpx rgba(0, 0, 0, 0.2);
}

.head .search-suggest .search-what {
  padding: 16rpx 24rpx;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 32rpx;
  color: rgb(80, 125, 175);
  border-bottom: 1px solid #eee;
}

.head .search-suggest .suggest-list .suggest-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  height: 66rpx;
  font-size: 32rpx;
  color: #999;
  border-bottom: 1px solid #ccc;
}

.head .search-suggest .suggest-list .suggest-item:last-child {
  border-bottom: 0;
}

.head .search-suggest .suggest-list .suggest-item .icon {
  margin-right: 24rpx;
  width: 40rpx;
  height: 40rpx;
}

.history-search {
  display: flex;
  align-items: center;
  overflow: hidden;
}

.history-search .title {
  width: 128rpx;
  height: 128rpx;
  line-height: 128rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
}

.history-search .delete {
  padding: 24rpx;
}

.history-search .delete:active {
  background-color: rgba(0, 0, 0, 0.3);
}

.history-search .delete image {
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.history-search .history-scroll {
  white-space: nowrap;
  width: calc(100vw - 216rpx);
}

.history-search .history-scroll .history-item {
  margin-right: 20rpx;
  display: inline-block;
  padding: 8rpx 24rpx;
  font-size: 28rpx;
  border-radius: 50rpx;
  background-color: #eee;
}

.hot-search {
  position: relative;
}

.hot-search .title {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.hot-search .title .txt {
  font-size: 30rpx;
  font-weight: bold;
}

.hot-search .title .play-all {
  padding: 8rpx 20rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  border-radius: 50rpx;
  border: 1px solid #ddd;
}

.hot-search .title .play-all image {
  margin-right: 8rpx;
  width: 20rpx;
  height: 20rpx;
}

.hot-search .hot-list {
  padding: 0 32rpx;
  display: flex;
  flex-wrap: wrap;
  height: calc(5 * 74rpx);
  overflow: hidden;
  transition: all 500ms;
}

.hot-search .hot-list.open {
  height: calc(10 * 74rpx);
}

.hot-search .hot-list .hot-item {
  display: flex;
  align-items: center;
  width: 50%;
  height: 74rpx;
  transition: all 300ms linear 300ms;
}

.hot-search .hot-list .hot-item.hide {
  opacity: 0;
}

.hot-search .hot-list .hot-item .hot-No {
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #c84137;
}

.hot-search .hot-list .hot-item .hot-value {
  font-size: 30rpx;
  font-weight: bold;
}

.hot-search .hot-list .hot-item .icon {
  margin-left: 20rpx;
  width: 50rpx;
  height: 30rpx;
}

.hot-search .more {
  z-index: -1;
  position: absolute;
  top: calc(5 * 74rpx + 104rpx);
  left: 0;
  right: 0;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #999;
  transition: all 300ms;
}

.hot-search .more:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.hot-search .more.hide {
  opacity: 0;
}

.hot-search .more image {
  width: 40rpx;
  height: 40rpx;
}

.search-nav {
  position: sticky;
}

.search-nav-scroll {
  white-space: nowrap;
}

.search-nav-scroll .searchNav-item {
  display: inline-block;
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  background-color: #dc2c1f;
}

.search-nav-scroll .searchNav-item.active {
  position: relative;
  font-weight: bold;
  color: #fff;
}

.search-nav-scroll .searchNav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #fff;
}

.search-list .swiper {
  height: 100%;
}

.search-list .swiper .search-list-scroll {
  height: 100%;
}

.search-list .swiper .search-list-scroll .song-list-block {
  padding: 32rpx 0;
}

.search-list .swiper .search-list-scroll .list-title {
  padding: 0 24rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list {
  padding: 0 24rpx;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item {
  padding: 24rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item .song-info {
  flex: 1;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item .song-info .song-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 540rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item .song-info .singer-album {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 540rpx;
  font-size: 26rpx;
  color: #666;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item .actions {
  display: flex;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item .actions .action {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item .actions .action:first-child {
  margin-right: 20rpx;
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item .actions .action:active {
  background-color: rgba(0, 0, 0, 0.1);
}

.search-list .swiper .search-list-scroll .song-list-block .song-list .song-item .actions .action image {
  width: 40rpx;
  height: 40rpx;
}

.search-list .swiper .search-list-scroll .havemore {
  padding: 24rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.search-list .swiper .search-list-scroll .havemore:active {
  background-color: rgba(0, 0, 0, 0.1);
}


.search-list .swiper .search-list-scroll .play-list-block {
  padding: 32rpx 0;
}

.search-list .swiper .search-list-scroll .play-list-block .play-list {
  padding: 24rpx;
}

.search-list .swiper .search-list-scroll .play-list-block .play-list .play-item {
  margin-bottom: 24rpx;
  display: flex;
}

.search-list .swiper .search-list-scroll .play-list-block .play-list .play-item:last-child {
  margin-bottom: 0;
}

.search-list .swiper .search-list-scroll .play-list-block .play-list .play-item .playImg {
  margin-right: 16rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
}

.search-list .swiper .search-list-scroll .play-list-block .play-list .play-item .play-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.search-list .swiper .search-list-scroll .play-list-block .play-list .play-item .play-info .play-name {
  margin-bottom: 8rpx;
  font-size: 32rpx;
}

.search-list .swiper .search-list-scroll .play-list-block .play-list .play-item .play-info .play-data {
  font-size: 24rpx;
  color: #999;
}

.search-list .swiper .search-list-scroll .video-list-block {
  padding: 32rpx 0;
}

.search-list .swiper .search-list-scroll .video-list-block .video-list {
  padding: 24rpx;
}

.search-list .swiper .search-list-scroll .video-list-block .video-list .video-item {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.search-list .swiper .search-list-scroll .video-list-block .video-list .video-item:last-child {
  margin-bottom: 0;
}

.search-list .swiper .search-list-scroll .video-list-block .video-list .video-item .video-img {
  position: relative;
  margin-right: 16rpx;
  width: 250rpx;
  height: 140rpx;
  border-radius: 16rpx;
}

.search-list .swiper .search-list-scroll .video-list-block .video-list .video-item .video-img .play-num {
  position: absolute;
  top: 0;
  right: 0;
  padding: 8rpx;
  font-size: 20rpx;
  color: #fff;
}

.search-list .swiper .search-list-scroll .video-list-block .video-list .video-item .video-info {
  flex: 1;
}

.search-list .swiper .search-list-scroll .video-list-block .video-list .video-item .video-info .video-name {
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
  font-size: 30rpx;
  color: #333;
}

.search-list .swiper .search-list-scroll .video-list-block .video-list .video-item .video-info .video-data {
  font-size: 26rpx;
  color: #999;
}