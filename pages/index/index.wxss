.bgc {
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 350rpx;
  background-color: #dc2c1f;
}

.main .swiper {
  margin: 0 auto;
  width: 700rpx;
  height: 270rpx;
}

.main .swiper image {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.main .swiper image .type-title {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #3488c9;
  border-radius: 16rpx 0 0 0;
}

.nav-scroll {
  margin-top: 50rpx;
  white-space: nowrap;
}

.nav-scroll .nav {
  margin-right: 50rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}

.nav-scroll .nav:first-child {
  margin-left: 26rpx;
}

.nav-scroll .nav:last-child {
  margin-right: 26rpx;
}

.nav-scroll .nav .icon {
  margin-bottom: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  background-image: linear-gradient(to right, #fb5542, #ef3d2e);
  border-radius: 50%;
}

.nav-scroll .nav .icon image {
  width: 50rpx;
  height: 50rpx;
}

.nav-scroll .nav .txt {
  font-size: 26rpx;
  color: #000;
}

.index-block {
  margin-top: 60rpx;
}

.index-block .title {
  margin-bottom: 24rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 标题 */
.index-block .title .txt {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

/* 新歌新碟 */
.index-block .title .new-tabs {
  display: flex;
}

.index-block .title .new-tabs .new-tab:first-child {
  padding-right: 20rpx;
  border-right: 1px solid #ccc;
}

.index-block .title .new-tabs .new-tab:last-child {
  padding-left: 20rpx;
}

.index-block .title .new-tabs .new-tab.active {
  color: #666;
}

.index-block .title .btn {
  padding: 8rpx 16rpx;
  font-size: 26rpx;
  color: #000;
  border-radius: 40rpx;
  border: 1px solid #ddd;
}

.index-block .block-scroll {
  white-space: nowrap;
}

/* 歌单类显示Block */
.index-block .block-scroll .play-list-item {
  margin-right: 32rpx;
  display: inline-block;
}

.index-block .block-scroll .play-list-item:first-child {
  margin-left: 32rpx;
}

.index-block .block-scroll .play-list-item .playlist-img {
  position: relative;
  margin-bottom: 6rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
}

/* 歌单播放次数 */
.index-block .block-scroll .play-list-item .playlist-img .play-num {
  position: absolute;
  top: 6rpx;
  right: 10rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #fff;
}

.index-block .block-scroll .play-list-item .playlist-img .play-num image {
  margin-right: 4rpx;
  width: 20rpx;
  height: 20rpx;
}

/* 直播人气 */
.index-block .block-scroll .play-list-item .playlist-img .hot-tag {
  position: absolute;
  top: 0;
  left: 0;
  padding: 4rpx 10rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
}

.index-block .block-scroll .play-list-item .playlist-img .hot-tag .hot-img {
  margin-right: 4rpx;
  width: 20rpx;
  height: 20rpx;
}

.index-block .block-scroll .play-list-item .item-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  white-space: normal;
  width: 200rpx;
  height: 70rpx;
  font-size: 26rpx;
  color: #000;
}

/* mlog显示Block */
.index-block .block-scroll .mlog-item {
  margin-right: 32rpx;
  padding-bottom: 8rpx;
  display: inline-block;
  border-radius: 16rpx;
  background-color: #f6f6f6;
  overflow: hidden;
}

.index-block .block-scroll .mlog-item:first-child {
  margin-left: 32rpx;
}

.index-block .block-scroll .mlog-item .mlog-img {
  width: 200rpx;
  height: 250rpx;
}

.index-block .block-scroll .mlog-item .mlog-txt {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  white-space: normal;
  box-sizing: border-box;
  padding: 0 12rpx;
  width: 200rpx;
  height: 66rpx;
  font-size: 24rpx;
  color: #777;
}

/* 推荐音乐显示Block */
.index-block .block-swiper {
  width: 100vw;
  height: 350rpx;
}

.index-block .block-swiper .block-swiper-item {
  width: 90% !important;
}

.index-block .block-swiper .block-swiper-item .song-list {
  padding: 0 24rpx;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item {
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item:last-child {
  margin-bottom: 0;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item .song-img {
  margin-right: 8rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item .item-info {
  flex: 1;
  margin-right: 12rpx;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item .item-info .song-singer {
  display: flex;
  align-items: center;
  max-width: 453rpx;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item .item-info .song-singer .song-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 343rpx;
  font-size: 32rpx;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item .item-info .song-singer .singer-name {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  min-width: 100rpx;
  font-size: 24rpx;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item .item-info .song-explain {
  font-size: 24rpx;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item .play-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
}

.index-block .block-swiper .block-swiper-item .song-list .song-list-item .play-icon image {
  width: 24rpx;
  height: 24rpx;
}